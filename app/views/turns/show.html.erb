<%= render "layouts/navbar" %>

<h1 class ="text-center" style="color: #1F3864">Informaci√≥n del Turno</h1>

  <p class="fs-4" style="color: #1F3864">
    <strong>Fecha:</strong>
    <%= I18n.l(@turn.date.to_date, locale: :es) %> 
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Hora:</strong>
    <%= convert_time(@turn.date) %>
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Motivo:</strong>
    <%= @turn.motive %>
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Estado:</strong>
    <%= convert(@turn.state) %>
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Sucursal:</strong>
    <%= @turn.subsidiary.name %>
  </p>

  <% if @turn.state %>
    <p class="fs-4" style="color: #1F3864">
      <strong>Atendido por:</strong>
      <%= @turn.staff.name %>
    </p>

    <p class="fs-4" style="color: #1F3864">
      <strong>Resultado:</strong>
      <%= @turn.result %>
    </p>
  <% end %>

