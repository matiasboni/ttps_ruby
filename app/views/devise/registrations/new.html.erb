<section class="vh-100 gradient-custom" style="background-color: #96D2DC">
<div class="container py-5 h-100">
   <div class="row d-flex justify-content-center align-items-center h-100">
     <div class="col-12 col-md-8 col-lg-6 col-xl-5">
       <div class="card bg-dark text-white" style="border-radius:1rem;">
          <div class="card-body p-4 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
             <h2 class="fw-bold mb-2 text-uppercase">Banco Argentina</h2>
              <h5 class="fw-bold mb-2 text-uppercase">Registrarse</h5>
              <%if resource.errors.any? %>
              <div class="alert alert-dark" role="alert">
              <%= render "devise/shared/error_messages", resource: resource %>
              </div>
              <%end%>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-outline form-white mb-4">
                <%= f.label :email,"Email",:class=>"form-label",:class=>"form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"form-control form-control-sm" %>
              </div>
               <div class="form-outline form-white mb-4">
                  <%= f.label :password,"Contraseña" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password" , :class=> "form-control form-control-sm"%>
              </div>
              <div class="form-outline form-white mb-4">
                <%= f.label :password_confirmation,"Ingrese la contraseña nuevamente",:class=>"form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=> "form-control form-control-sm" %>
              </div>
              <div class="actions">
                 <%= f.submit "Registrarse" , data: {turbo:false} ,:class=>"btn btn-outline-light btn-lg px-4" %>
              </div>
              <% end %>
            </div>
            <div>
             <p class="mb-0">¿Ya tiene una cuenta creada? <%= link_to "Iniciar sesión", new_user_session_path,:class=>"text-white-50 fw-bold" %>
             </p>
            </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
