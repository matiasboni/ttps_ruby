<div id="<%= dom_id subsidiary %>">
  <p class="fs-4" style="color: #1F3864">
    <strong>Nombre:</strong>
    <%= subsidiary.name %>
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Dirección:</strong>
    <%= subsidiary.address %>
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Número de télefono:</strong>
    <%= subsidiary.phone_number %>
  </p>

  <p class="fs-4" style="color: #1F3864">
    <strong>Horarios de atención:</strong>
  </p>
    <table class="table table-striped">
      <thead>
         <tr>
            <th>Dia</th>
            <th>Horario de apertura</th>
            <th>Horario de cierre</th>
        </tr>
      </thead>
      <tbody>
         <% order=@subsidiary.bussiness_hours.sort_by{|s| s.day} %>
         <% order.each do |s| %>
          <tr>
            <td>
              <%=  day_to_string(s.day) %>
            </td>
            <td>
              <%= s.opening_time.strftime("%H:%M")  %>
            </td>
            <td>
               <%= s.closing_time.strftime("%H:%M") %>
            </td>
          </tr>
        <% end %>
  </tbody>
  </table>

</div>